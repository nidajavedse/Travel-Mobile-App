<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookFlight">

    <TextView
        android:id="@+id/bookflight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/bookflight"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:text="@string/from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookflight" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewloc"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbar"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        android:hint="@string/selectlocation"
        android:textSize="15dp"
        android:paddingLeft="18dp"
        android:textColor="@color/grey"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="7dp"
        android:text="@string/to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewloc" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewdes"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbar"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        android:textSize="15dp"
        android:hint="@string/selectdes"
        android:paddingLeft="18dp"
        android:textColor="@color/grey"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="7dp"
        android:text="@string/Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewdes" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewtime"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbar"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        android:hint="@string/selecttime"
        android:paddingLeft="18dp"
        android:textSize="15dp"
        android:textColor="@color/grey"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="7dp"
        android:text="@string/Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewtime" />

    <EditText
        android:id="@+id/EditTextdate"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbar"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        android:hint="@string/selectdate"
        android:textSize="15dp"
        android:paddingLeft="18dp"
        android:textColor="@color/grey"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextdate"
        app:layout_constraintEnd_toEndOf="@+id/EditTextdate"
        app:layout_constraintTop_toTopOf="@+id/EditTextdate"
        app:srcCompat="@drawable/ic_baseline_calendar_month_24" />

    <TextView
        android:id="@+id/airline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="7dp"
        android:text="@string/Airline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextdate" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewairline"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbar"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        android:hint="@string/selectairline"
        android:paddingLeft="18dp"
        android:textSize="15dp"
        android:textColor="@color/grey"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/airline" />

    <Button
        android:id="@+id/insert"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/orange"
        android:elevation="10dp"
        android:text="@string/bookflight"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewairline" />

</androidx.constraintlayout.widget.ConstraintLayout>